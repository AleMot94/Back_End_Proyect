<div>
    <h1>productos</h1>
    <div id="div-products">
        {{#each products}}
           <p>{{this.title}}</p>
        {{/each}}
    </div>
    
    <h2>agregar un producto</h2>
    
    <form>
        <label>Nombre</label>
        <input type="text" id="title"/>
        <label>Descripcion</label>
        <textarea name="description" id="description" cols="30" rows="10" type="text" ></textarea>
        <label>Precio</label>
        <input id="price" type="number"/>
        <label>Imagen</label>
    </form>

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/products-socket.js"></script>